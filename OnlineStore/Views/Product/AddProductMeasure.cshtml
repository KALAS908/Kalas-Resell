@model OnlineStore.BusinessLogic.Implementation.Products.Models.MeasureQuantityModel

<h1>@Model.ProductName</h1>
<form asp-action="AddProductMeasure" asp-controller="Product" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <input type="hidden" id="typeIdHidden" name="typeId" value="@Model.TypeId" />
    <input type="hidden" id="productIdHidden" name="productId" value="@Model.ProductId" />
    <div class="form-group">
        <label asp-for="MeasureId" class="control-label"></label>
        <select asp-for="MeasureId" class="form-control" id="measureDropdown" required>
        </select>
        <span asp-validation-for="MeasureId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Measure" class="btn btn-secondary" />
    </div>
    <a href="@Url.Action("ProductDetails", "Product", new { id = Model.ProductId })" class="btn btn-dark">Back To product </a>
</form>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/ProductDetails/MeasureList.js"></script>
<script type="text/javascript">new MeasureList()</script>
