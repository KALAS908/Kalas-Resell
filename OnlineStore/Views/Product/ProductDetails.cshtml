@model OnlineStore.Common.DTOs.ProductWithMeasureDto
@{
    ViewData["Title"] = "View";
}
<style>

    .Carousel_description {
        flex: 0 0 auto; /* elementul caruselului nu va crește și nu va scădea */
        max-height: 1000px;
    }

    #Others {
        flex: 1; /* elementul "others" va ocupa restul spațiului disponibil */
        text-align: left;
    }

    #Description {
        text-align: left;
    }
</style>
<input type="hidden" id="productIdHidden" name="productId" value="@Model.Id" />
<div class="container text-center">
    <div class="row">
        <div id="Carousel_Description" class="col-8">
            <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        if (i == 0)
                        {
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i" class="active" aria-current="true" aria-label="Slide @i"></button>

                        }
                        else
                        {
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i" aria-label="Slide @i"></button>

                        }
                    }
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        @if (i == 0)
                        {
                            <div class="carousel-item active" data-bs-interval="2000">
                                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Images[i])" class="d-block w-100" width="300" height="500">
                            </div>
                        }
                        else
                        {

                            <div class="carousel-item" data-bs-interval="2000">
                                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Images[i])" class="d-block w-100" width="300" height="500">
                            </div>
                        }
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div id="Others" class="col-4">
            <h5>@Model.Name</h5>
            <p>@($"{Model.Price} USD")</p>
            <div class="form-group">
                <label asp-for="MeasureId" class="control-label">Select Measure</label>
                <select asp-for="MeasureId" class="form-control" id="productMeasureDropdown">
                </select>
                <span asp-validation-for="MeasureId" class="text-danger"></span>
            </div>

            <a href="@Url.Action("AddProductToCart", "Product", new { id = Model.Id })" class="btn btn-primary">Add to Cart</a>
            <a href="@Url.Action("ProductDetails", "Product", new { id = Model.Id })" class="btn btn-primary"><i class="bi bi-box2-heart"></i></a>
        </div>
    </div>
    <div class="row" id="Description">
        <h3>Description </h3>
        <p>@Model.Description</p>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/ProductDetails/ProductMeasuresList.js"></script>
<script type="text/javascript">new ProductMeasuresList()</script>