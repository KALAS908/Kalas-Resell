                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 26 })">UnderWear</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 27 })">Dress</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 28 })">Skirts</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 29 })">Jackets and Coats</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>

                        @if (CurrentUser.IsAuthenticated)
                        {

                            @if (CurrentUser.RoleId == "1")
                            {
                                    <ul class="navbar-nav">
                                        <li class="nav-item dropdown" id="myDropdown">
                                            <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">  Admin Actions  </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Create", "Product", new { id = 1 })">Create Product</a>
                                                </li>
                                                <li>
                                                <a class="dropdown-item" href="@Url.Action("AllUsers", "UserAccount" , new {page = 1})">Users</a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                            }
                        }
                    </ul>

                </div>
                <div>

                    @if (CurrentUser.IsAuthenticated)
                    {
                        <a href="@Url.Action("Profile", "UserAccount", new { id = CurrentUser.Id })" class="text-decoration-none text-white"><i class="bi bi-person-circle"></i></a>
                        <a asp-controller="UserAccount" asp-action="ShoppingCart" style="color: white"><i class="bi bi-cart-fill"></i></a>
                        <a asp-controller="UserAccount" asp-action="Logout" style="color: white">Log out</a>

                    }
                    else
                    {
                        <a asp-controller="UserAccount" asp-action="Login" style="color: white; margin-right: 10px; text-decoration: none"><i class="bi bi-box-arrow-in-right"></i> Log in </a>
                        <a asp-controller="UserAccount" asp-action="Register" style="color: white; text-decoration: none">Register</a>

                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OnlineStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
