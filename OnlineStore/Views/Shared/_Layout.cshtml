@inject OnlineStore.Common.DTOs.CurrentUserDto CurrentUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Layout/Layout.css" />
    @*<link rel="stylesheet" href="~/OnlineStore.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-darkt bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: white"><i class="bi bi-house">Home </i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" asp-area="" asp-controller="Product" asp-action="ProductsView" id="navbarScrollingDropdown">Products</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-area="" asp-controller="Product" asp-action="ClothesView">Clothes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-area="" asp-controller="Product" asp-action="ShoesView">Shoes</a>
                                </li>
                            </ul>

                        </li>

                   


                        @if (CurrentUser.IsAuthenticated)
                        {

                            @if (CurrentUser.RoleId == "1")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Create">Create Product</a>
                                </li>
                            }
                        }
                    </ul>

                </div>
                <div>

                    @if (CurrentUser.IsAuthenticated)
                    {
                        <a href="@Url.Action("Profile", "UserAccount", new { id = CurrentUser.Id })" class="text-decoration-none text-white"><i class="bi bi-person-circle"></i></a>
                        <a asp-controller="UserAccount" asp-action="ShoppingCart" style="color: white"><i class="bi bi-cart-fill"></i></a>
                        <a asp-controller="UserAccount" asp-action="Logout" style="color: white">Log out</a>

                    }
                    else
                    {
                        <a asp-controller="UserAccount" asp-action="Login" style="color: white; margin-right: 10px; text-decoration: none"><i class="bi bi-box-arrow-in-right"></i> Log in </a>
                        <a asp-controller="UserAccount" asp-action="Register" style="color: white; text-decoration: none">Register</a>

                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OnlineStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
