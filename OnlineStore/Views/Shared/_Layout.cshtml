                                <li class="nav-item dropdown" id="myDropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">  Products  </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("GenderView", "Product", new { id = 1 })"> Men &equiv; </a>
                                            <ul class="submenu dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("ShoesView", "Product", new { id = 1 })">Shoes &equiv; </a>
                                                    <ul class="submenu dropdown-menu">
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 1 })">Sneakers</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 2 })">Low Top</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 3 })">Slides</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 5 })">High Tops</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 6 })">Boots </a></li>
                                                    </ul>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("ClothesView", "Product", new { id = 1 })">Clothes &equiv; </a>
                                                    <ul class="submenu dropdown-menu">
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 13 })">T-Shirts</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 14 })">Shirts</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 15 })">Shorts</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 16 })">Trousers</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 17 })">Hoodies and Sweaters</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 17 })">Hoodies and Sweaters</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 18 })">UnderWear</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 19 })">Jackets and Coats</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </li>


                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("GenderView", "Product", new { id = 2 })"> Women &equiv; </a>
                                            <ul class="submenu dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("GenderView", "Product", new { id = 2 })">Shoes &equiv; </a>
                                                    <ul class="submenu dropdown-menu">
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 7 })">Sneakers</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 8 })">Low Top</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 9 })">Slides</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 11 })">High Tops</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 12 })">Boots</a></li>
                                                    </ul>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("ClothesView", "Product", new { id = 2 })">Clothes &equiv; </a>
                                                    <ul class="submenu dropdown-menu">
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 20 })">T-Shirts</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 21 })">Shirts</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 22 })">Shorts</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 23 })">Trousers</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("CategoryView", "Product", new { id = 24 })">Hoodies and Sweaters</a></li>
